<!doctype html>
<html>
<head>
    <title>Craving Saving</title>

    <script type="text/javascript" src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
    <script type="text/javascript" src="/jquery-ui/jquery-ui.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

    <script type="text/javascript" src="/goalEdit.js"></script>
    <script type="text/javascript" src="/dragDrop.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheet.css">
    <link rel="stylesheet" type="text/css" href='https://fonts.googleapis.com/css?family=Questrial'>
    <script> var user = JSON.parse('<%- JSON.stringify(user) %>'); var id = Number(JSON.parse('<%- JSON.stringify(id)%>'));</script> <!-- load into javascript-->
</head>
<body>
    <div id="landing-wrapper">
        <div id="landing-content">

            <div class="container" id="page-content">

                <div class="row" style="padding:15px;border:3px solid black;background-color:#E6FFFF;margin:15px 0 30px 0;">
                    <div class="available-funds" style="float:left;"><%=user.name%>'s Available Funds: $<%= user.balance.toFixed(2) %></div>

                    <div style="text-align:right;">
                        <button class="btn btn-default" id="spend-now-btn" data-toggle="tooltip" title="Spend money directly, without adding a new goal">
                            <img src="/images/spendnow-btn-copy.png" width="100%" height="100%">
                        </button>

                        <button id="logout-btn" type="button" class="btn btn-default" style="vertical-align:middle;">
                            <span class="glyphicon glyphicon-cog" id="logout-btn-cog" aria-hidden="true"></span>
                            <span>Logout</span>
                        </button>
                    </div>
                </div>

                <ul class="nav nav-tabs" id="myTab">
                    <li class="active">
                        <a id="goals-tab" href="#goals"><h4>Goals</h4></a>
                    </li>
                    <li>
                        <a id="earn-tab" href="#earn"><h4>Earn</h4></a>
                    </li>
                    <li>
                        <a id="history-tab" href="#history"><h4>History</h4></a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane active" id="goals">
        				<div id="goal-menu">
        					<div class="row" id="back-edit-row">
                                <button  type="button" class="btn btn-default back-btn btn-lg" id="back">
                                    <img src="/images/left-arrow.png" alt="Back" id="back-img">
                                </button>
                            </div>
        					<div class="row">
        						<div id = "goal-photobox" class="col-md-4 goal-photobox">
        							<img id="goal-photo" src="<%= user.goals[id].imageURL %>" class="goal-pic center-block goal-img">
                                    <div id="goal-photo-hover">
                                        Upload Photo <i class="glyphicon glyphicon-camera" aria-hidden="true"></i>
                                    </div>
        						</div>

        						<div class="col-md-8 text-center goal-info">
        							<div class="goalname-input">
        								<input id="edit-goal-name" value="<%= user.goals[id].goalName %>" type="text" class="form-control"></input>
        							</div>

        							<div class="row goal-amtedit">$<span id="cur-val"><%= user.goals[id].saved %></span> of $<input id="goal-price" value="<%= user.goals[id].price.toFixed(2) %>" type="text" class="form-control"></div>
        						</div>
        					</div>
        					<div class="row" style="padding-right:0px;padding-left:0px;">
        						<div class="col-md-9">
        							<div class="progress maingoal-bar edit-progress">
        							    <div class="progress-bar progress-bar-success progress-bar-striped maingoal-progress" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:0%">
        							    <span class="progress-bar-text">0</span>%
        							  	</div>
        							</div>
        						</div>
        						<div class="col-md-3">
        							<button type="button" class="btn btn-primary btn-lg progress-row-btn edit-progress-row-btn" id = "save-btn">Save</button>
                                    <button type="button" class="btn btn-default btn-lg progress-row-btn edit-progress-row-btn" id = "cancel-btn">Cancel</button>
        						</div>
        					</div>

        					<div id="photoModal" class="modal fade" tabindex="-1" role="dialog">
        						<div class="modal-dialog">
        							<div class="modal-content">
        								<div class="modal-header">
        									<button type="button" class="close" data-dismiss="modal">×</button>
        									<h3>Upload Photo</h3>
        								</div>
        								<div class="modal-body" style="text-align:center;">
                                            <input id="fileUpload" type='file' onchange="readURL(this);"/>
                                            <div id="photo-upload-failure" class="alert alert-danger">
                                                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                                <span class="sr-only">Error:</span>
                                                Please upload a file that is less than 500KB.
                                            </div>
                                            <div id="new-goal-photo-container">
                                                <img id="new-goal-photo" src="<%= user.goals[id].imageURL %>"/>
                                            </div>
        								</div>
        								<div class="modal-footer">
        									<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        									<button type="button" id = "submit-photo-btn" class="btn btn-primary" data-dismiss="modal">Upload</button>
        								</div>
        							</div>
        						</div>
        					</div>

                            <div id="backFromEditModal" class="modal fade" tabindex="-1" role="dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">×</button>
                                            <h3>Return to Goal</h3>
                                        </div>
                                        <div class="modal-body">
                                            <h4>Would you like to Save or Cancel your edits to this goal?</h4>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default cancel-btn" data-dismiss="modal" id="modal-cancel-btn">Cancel</button>
                                            <button type="button" class="btn btn-primary purchase-btn" data-dismiss="modal" id="modal-save-btn">Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div id="historyFromEditModal" class="modal fade" tabindex="-1" role="dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">×</button>
                                            <h3>Go to History</h3>
                                        </div>
                                        <div class="modal-body">
                                            <h4>Would you like to Save or Cancel your edits to this goal?</h4>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default cancel-btn" data-dismiss="modal" id="to-history-modal-cancel-btn">Cancel</button>
                                            <button type="button" class="btn btn-primary purchase-btn" data-dismiss="modal" id="to-history-modal-save-btn">Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div id="earnFromEditModal" class="modal fade" tabindex="-1" role="dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">×</button>
                                            <h3>Go to Earn</h3>
                                        </div>
                                        <div class="modal-body">
                                            <h4>Would you like to Save or Cancel your edits to this goal?</h4>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default cancel-btn" data-dismiss="modal" id="to-earn-modal-cancel-btn">Cancel</button>
                                            <button type="button" class="btn btn-primary purchase-btn" data-dismiss="modal" id="to-earn-modal-save-btn">Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div id="logoutFromEditModal" class="modal fade" tabindex="-1" role="dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">×</button>
                                            <h3>Logout</h3>
                                        </div>
                                        <div class="modal-body">
                                            <h4>Would you like to Save or Cancel your edits to this goal?</h4>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default cancel-btn" data-dismiss="modal" id="logout-modal-cancel-btn">Cancel</button>
                                            <button type="button" class="btn btn-primary purchase-btn" data-dismiss="modal" id="logout-modal-save-btn">Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

        				</div>

                    </div>

                </div>
            </div> <!-- end of page-content -->
        </div>
    </div>
</body>
</html>
